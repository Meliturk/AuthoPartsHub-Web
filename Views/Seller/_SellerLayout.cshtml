@using System.Security.Claims
@inject AutoPartsWeb.Data.ApplicationDbContext Db
@{
    var currentAction = ViewContext.RouteData.Values["Action"]?.ToString();
    Func<string, string> active = action => currentAction == action ? "active" : "";
    var displayName = (User?.Identity?.Name ?? "").Trim();
    if (string.IsNullOrWhiteSpace(displayName))
    {
        displayName = "Satici";
    }
    var sellerId = 0;
    if (User?.Identity?.IsAuthenticated == true)
    {
        var idValue = User.FindFirstValue(ClaimTypes.NameIdentifier);
        if (int.TryParse(idValue, out var sid))
            sellerId = sid;
    }
    var pendingQuestionCount = 0;
    var pendingOrderCount = 0;
    if (sellerId > 0)
    {
        pendingQuestionCount = Db.ProductQuestions.Count(q =>
            q.Part.SellerId == sellerId &&
            (q.Answer == null || q.Answer == ""));
        pendingOrderCount = Db.Orders.Count(o =>
            o.Status == "Pending" &&
            o.Items.Any(i => i.Part.SellerId == sellerId));
    }
    var pendingQuestionLabel = pendingQuestionCount > 99 ? "99+" : pendingQuestionCount.ToString();
    var pendingOrderLabel = pendingOrderCount > 99 ? "99+" : pendingOrderCount.ToString();
}
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Satıcı Paneli</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/theme.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/admin.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>
<body style="background: var(--bg);">
    <header>
        <div class="topbar">
            <div class="container d-flex justify-content-between align-items-center">
                <div class="d-flex align-items-center gap-3">
                    <span><i class="bi bi-telephone icon me-1"></i> +90 555 123 45 67</span>
                    <span><i class="bi bi-envelope icon me-1"></i> info@autoparts.com</span>
                </div>
                <div class="d-flex align-items-center gap-3">
                    <i class="bi bi-geo-alt icon"></i><span>Türkiye geneli ücretsiz kargo</span>
                </div>
            </div>
        </div>
        <div class="main-nav py-3">
            <div class="container">
                <div class="d-flex flex-wrap align-items-center gap-3">
                    <a class="brand-wrap d-flex align-items-center gap-2 text-decoration-none" asp-controller="Home" asp-action="Index">
                        <img src="~/images/logo.png" alt="AutoParts Hub" style="height:42px; width:auto;" />
                        <div>
                            <div class="fw-bold" style="color:var(--brand)">AutoParts Hub</div>
                            <div class="text-secondary small">Satıcı Paneli</div>
                        </div>
                    </a>
                    <div class="flex-grow-1">
                        <div class="search-bar d-flex align-items-center gap-2">
                            <i class="bi bi-search text-secondary ms-1"></i>
                            <input type="text" placeholder="Ürün veya sipariş ara..." />
                            <button class="btn btn-sm btn-accent px-3" type="button">Ara</button>
                        </div>
                    </div>
                    <div class="d-flex align-items-center gap-2">
                        <a class="user-chip" asp-controller="Account" asp-action="Profile" title="Profil">
                            <i class="bi bi-person-badge"></i>
                            <span>@displayName</span>
                            <span class="user-role">Satici</span>
                        </a>
                        <form asp-controller="Auth" asp-action="Logout" method="post" class="m-0 p-0">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-outline-secondary btn-sm"><i class="bi bi-box-arrow-right"></i></button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <div class="container my-4">
        <div class="card border-0 shadow-sm rounded-4 mb-4">
            <div class="card-body d-flex align-items-center justify-content-between flex-wrap gap-2">
                <div>
                    <div class="text-secondary small">Son satış özetleri ve trendler</div>
                    <h4 class="fw-bold mb-0">Satıcı Paneli</h4>
                </div>
                <div class="nav nav-pills">
                    <a class="nav-link @active("Index")" asp-controller="Seller" asp-action="Index">Genel Bakis</a>
                    <a class="nav-link @active("Products")" asp-controller="Seller" asp-action="Products">&Uuml;r&uuml;nler</a>
                    <a class="nav-link @active("Orders")" asp-controller="Seller" asp-action="Orders">
                        Siparisler
                        @if (pendingOrderCount > 0)
                        {
                            <span class="nav-badge">@pendingOrderLabel</span>
                        }
                    </a>
                    <a class="nav-link @active("Questions")" asp-controller="Seller" asp-action="Questions">
                        Sorular
                        @if (pendingQuestionCount > 0)
                        {
                            <span class="nav-badge">@pendingQuestionLabel</span>
                        }
                    </a>
                </div>
            </div>
        </div>

        <main>
            @RenderBody()
        </main>
    </div>

    <footer class="footer-dark mt-4">
        <div class="container">
            <div class="row g-4">
                <div class="col-md-3">
                    <div class="fw-bold mb-2">AutoParts Hub</div>
                    <div class="text-secondary">Otomobil yedek parça ihtiyaçlarınız için güvenilir adresiniz. Kaliteli ürünler, hızlı teslimat.</div>
                </div>
                <div class="col-md-3">
                    <div class="fw-bold mb-2">Hızlı Linkler</div>
                    <div class="d-flex flex-column gap-1">
                        <a asp-controller="Home" asp-action="Index">Ana Sayfa</a>
                        <a asp-controller="Parts" asp-action="Index">Ürünler</a>
                        <a asp-controller="Home" asp-action="About">Hakkımızda</a>
                        <a asp-controller="Home" asp-action="Contact">İletişim</a>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="fw-bold mb-2">Müşteri Hizmetleri</div>
                    <div class="d-flex flex-column gap-1">
                        <span>Yardım Merkezi</span>
                        <span>İade ve Değişim</span>
                        <span>Kargo Takibi</span>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="fw-bold mb-2">İletişim</div>
                    <div class="d-flex flex-column gap-1">
                        <span>Atatürk Cad. No:123</span>
                        <span>Kağıthane, İstanbul</span>
                        <span>+90 555 123 45 67</span>
                        <span>info@autoparts.com</span>
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
