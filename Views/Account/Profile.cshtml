@model AutoPartsWeb.Models.AppUser
@{
    ViewData["Title"] = "Profilim";
    Layout = "_Layout";
}

<div class="card border-0 shadow-sm rounded-4">
    <div class="card-body">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <div>
                <h3 class="fw-bold mb-0">Profil</h3>
                <div class="text-secondary small">Hesap bilgilerinizi görüntüleyin</div>
            </div>
            <form asp-controller="Auth" asp-action="Logout" method="post" class="d-inline">
                @Html.AntiForgeryToken()
                <button class="btn btn-outline-danger"><i class="bi bi-box-arrow-right me-1"></i>Çıkış Yap</button>
            </form>
        </div>

        <div class="row g-3">
            <div class="col-md-6">
                <label class="text-secondary small">Ad Soyad</label>
                <div class="fw-bold">@Model?.FullName</div>
            </div>
            <div class="col-md-6">
                <label class="text-secondary small">E-posta</label>
                <div class="fw-bold">@Model?.Email</div>
            </div>
            <div class="col-md-6">
                <label class="text-secondary small">Rol</label>
                <div class="fw-bold">@Model?.Role</div>
            </div>
        </div>

        <div class="mt-4 d-flex gap-2">
            <a class="btn btn-accent" asp-action="EditProfile"><i class="bi bi-pencil me-1"></i>Profili Düzenle</a>
            @if ((User?.IsInRole("User") ?? false) || (User?.IsInRole("SellerPending") ?? false))
            {
                <a class="btn btn-outline-secondary" asp-controller="Account" asp-action="MyOrders"><i class="bi bi-receipt me-1"></i>Siparişlerim</a>
            }
            <a class="btn btn-outline-secondary" asp-controller="Home" asp-action="Index">Alışverişe Devam Et</a>
        </div>
    </div>
</div>
