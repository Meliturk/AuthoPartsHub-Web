@model List<AutoPartsWeb.Models.Order>

@{
    ViewData["Title"] = "Siparişlerim";
    var statusMap = new Dictionary<string, string>
    {
        { "Pending", "Beklemede" },
        { "Processing", "Hazırlanıyor" },
        { "Shipped", "Kargolandı" },
        { "Cancelled", "İptal" },
        { "Completed", "Tamamlandı" }
    };
    var statusCls = new Dictionary<string, string>
    {
        { "Pending", "badge bg-warning text-dark" },
        { "Processing", "badge bg-info text-dark" },
        { "Shipped", "badge bg-primary" },
        { "Cancelled", "badge bg-danger" },
        { "Completed", "badge bg-success" }
    };
}

<div class="container py-4">
    <div class="d-flex align-items-center justify-content-between mb-3">
        <h3 class="fw-bold mb-3">Siparişlerim</h3>
        <div class="d-flex gap-2">
            @if (ViewBag.ShowingCompleted == true || ViewBag.ShowingCancelled == true)
            {
                <a class="btn btn-outline-secondary" asp-action="MyOrders">Aktif Siparisler</a>
            }
            @if (ViewBag.ShowingCompleted != true)
            {
                <a class="btn btn-outline-secondary" asp-action="MyOrders" asp-route-status="Completed">Tamamlananlar</a>
            }
            @if (ViewBag.ShowingCancelled != true)
            {
                <a class="btn btn-outline-secondary" asp-action="MyOrders" asp-route-status="Cancelled">Iptaller</a>
            }
        </div>
    </div>
    @if (Model.Count == 0)
    {
        <div class="alert alert-info rounded-4">Siparişiniz bulunmuyor.</div>
    }
    else
    {
        <div class="d-grid gap-3">
            @foreach (var o in Model)
            {
                var statusText = statusMap.ContainsKey(o.Status) ? statusMap[o.Status] : o.Status;
                var cls = statusCls.ContainsKey(o.Status) ? statusCls[o.Status] : "badge bg-secondary";
                <div class="card border-0 shadow-sm rounded-4">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start mb-2">
                            <div>
                                <div class="small text-secondary">#@o.Id</div>
                                <div class="fw-semibold">@o.CreatedAt.ToLocalTime().ToString("g")</div>
                            </div>
                            <span class="@cls">@statusText</span>
                        </div>
                        <div class="row g-2">
                            @foreach (var item in o.Items)
                            {
                                <div class="col-md-4 col-lg-3">
                                    <div class="border rounded-3 p-2 h-100 position-relative d-flex gap-2">
                                        <div style="width:64px; height:64px;" class="flex-shrink-0">
                                            @if (!string.IsNullOrWhiteSpace(item.Part?.ImageUrl))
                                            {
                                                <img src="@item.Part.ImageUrl" alt="@item.Part.Name" class="rounded" style="width:64px; height:64px; object-fit:cover;" />
                                            }
                                            else
                                            {
                                                <div class="bg-light border rounded d-flex align-items-center justify-content-center" style="width:64px; height:64px;">
                                                    <i class="bi bi-image text-secondary"></i>
                                                </div>
                                            }
                                        </div>
                                        <div class="flex-grow-1">
                                            <div class="fw-semibold small text-truncate">@item.Part?.Name</div>
                                            <div class="text-secondary small">Adet: @item.Quantity</div>
                                            <div class="fw-bold">@item.UnitPrice.ToString("C0")</div>
                                        </div>
                                        <a class="stretched-link" asp-controller="Parts" asp-action="Details" asp-route-id="@item.PartId"></a>
                                    </div>
                                </div>
                            }
                        </div>
                        <div class="d-flex justify-content-between align-items-center mt-3">
                            <div class="text-secondary small">Toplam</div>
                            <div class="fw-bold">@o.Total.ToString("C0")</div>
                        </div>
                        @if (o.Status != "Cancelled" && o.Status != "Completed")
                        {
                            <div class="mt-3 text-end">
                                <form asp-controller="Account" asp-action="CancelOrder" method="post" class="d-inline" onsubmit="return confirm('Bu siparişi iptal etmek istediğinize emin misiniz?');">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="id" value="@o.Id" />
                                    <button type="submit" class="btn btn-sm btn-outline-danger">
                                        <i class="bi bi-x-circle me-1"></i>İptal Et
                                    </button>
                                </form>
                            </div>
                        }
                    </div>
                </div>
            }
        </div>
    }
</div>
