@{
    var currentController = ViewContext.RouteData.Values["Controller"]?.ToString();
    var currentAction = ViewContext.RouteData.Values["Action"]?.ToString();
    Func<string, string?, string> activeTab = (ctrl, act) =>
    {
        var active = currentController == ctrl && (act == null || currentAction == act);
        return active ? "nav-link active" : "nav-link";
    };
}
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AutoParts Hub Admin</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/theme.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/admin.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/admin-extras.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AutoPartsWeb.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>
<body style="background: var(--bg);">
    <header>
        <div class="topbar">
            <div class="container d-flex justify-content-between align-items-center">
                <div class="d-flex align-items-center gap-3">
                    <span><i class="bi bi-telephone icon me-1"></i> +90 555 123 45 67</span>
                    <span><i class="bi bi-envelope icon me-1"></i> info@autoparts.com</span>
                </div>
                <div class="d-flex align-items-center gap-3">
                    <i class="bi bi-shield-check icon"></i><span>Yönetim Paneli</span>
                </div>
            </div>
        </div>
        <div class="main-nav py-3">
            <div class="container">
                <div class="d-flex flex-wrap align-items-center gap-3">
                    <a class="brand-wrap d-flex align-items-center gap-2 text-decoration-none" asp-controller="Home" asp-action="Index">
                        <img src="~/images/logo.png" alt="AutoParts Hub" style="height:42px; width:auto;" />
                        <div>
                            <div class="fw-bold" style="color:var(--brand)">AutoParts Hub</div>
                            <div class="text-secondary small">Admin Paneli</div>
                        </div>
                    </a>
                    <div class="flex-grow-1">
                        <div class="search-bar d-flex align-items-center gap-2">
                            <i class="bi bi-search text-secondary ms-1"></i>
                            <input type="text" placeholder="Parça veya sipariş ara..." />
                            <button class="btn btn-sm btn-accent px-3" type="button">Ara</button>
                        </div>
                    </div>
                    <div class="d-flex align-items-center gap-2">
                        <form asp-controller="Auth" asp-action="Logout" method="post" class="m-0 p-0">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-outline-secondary btn-sm"><i class="bi bi-box-arrow-right"></i></button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <div class="container my-4">
        <div class="card border-0 shadow-sm rounded-4 mb-4">
            <div class="card-body d-flex align-items-center justify-content-between flex-wrap gap-2">
                <div>
                    <div class="text-secondary small">Sistem özeti ve yönetim kısayolları.</div>
                    <h4 class="fw-bold mb-0">Admin Paneli</h4>
                </div>
                <div class="nav nav-pills">
                    <a class="nav-link @activeTab("Admin","Index")" asp-controller="Admin" asp-action="Index">Dashboard</a>
                    <a class="nav-link @activeTab("Admin","CreatePart")" asp-controller="Admin" asp-action="CreatePart">Yeni Parça</a>
                    <a class="nav-link @activeTab("Admin","CreateVehicle")" asp-controller="Admin" asp-action="CreateVehicle">Yeni Araç</a>
                    <a class="nav-link @activeTab("Admin","Parts")" asp-controller="Admin" asp-action="Parts">Parçalar</a>
                    <a class="nav-link @activeTab("Admin","Vehicles")" asp-controller="Admin" asp-action="Vehicles">Araçlar</a>
                    <a class="nav-link @activeTab("Admin","Orders")" asp-controller="Admin" asp-action="Orders">Siparişler</a>
                    <a class="nav-link @activeTab("Admin","Users")" asp-controller="Admin" asp-action="Users">Kullanıcılar</a>
                    <a class="nav-link @activeTab("Admin","Complaints")" asp-controller="Admin" asp-action="Complaints">Mesajlar</a>
                </div>
            </div>
        </div>

        <main>
            @RenderBody()
        </main>
    </div>

    <footer class="footer-dark mt-4">
        <div class="container">
            <div class="row g-4">
                <div class="col-md-3">
                    <div class="fw-bold mb-2">AutoParts Hub</div>
                    <div class="text-secondary">Otomobil yedek parça ihtiyaçlarınız için güvenilir adresiniz. Kaliteli ürünler, hızlı teslimat.</div>
                </div>
                <div class="col-md-3">
                    <div class="fw-bold mb-2">Hızlı Linkler</div>
                    <div class="d-flex flex-column gap-1">
                        <a asp-controller="Home" asp-action="Index">Ana Sayfa</a>
                        <a asp-controller="Parts" asp-action="Index">Ürünler</a>
                        <a asp-controller="Home" asp-action="About">Hakkımızda</a>
                        <a asp-controller="Home" asp-action="Contact">İletişim</a>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="fw-bold mb-2">Müşteri Hizmetleri</div>
                    <div class="d-flex flex-column gap-1">
                        <span>Yardım Merkezi</span>
                        <span>İade ve Değişim</span>
                        <span>Kargo Takibi</span>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="fw-bold mb-2">İletişim</div>
                    <div class="d-flex flex-column gap-1">
                        <span>Atatürk Cad. No:123</span>
                        <span>Kağıthane, İstanbul</span>
                        <span>+90 555 123 45 67</span>
                        <span>info@autoparts.com</span>
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
