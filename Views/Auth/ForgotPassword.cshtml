@{
    ViewData["Title"] = "Sifre Yenileme";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-5">
            <div class="card border-0 shadow-sm rounded-4">
                <div class="card-body p-4 p-md-5">
                    <h4 class="fw-bold mb-2">Sifre Yenileme</h4>
                    <div class="text-secondary small mb-3">Kayitli e-posta adresinize sifre yenileme baglantisi gonderilecektir.</div>

                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success small">@TempData["Success"]</div>
                    }
                    @if (TempData["Warning"] != null)
                    {
                        <div class="alert alert-warning small">@TempData["Warning"]</div>
                    }
                    @if (TempData["ResetLink"] != null)
                    {
                        <div class="alert alert-info small">
                            Sifre yenileme linki (gelistirme): <a href="@TempData["ResetLink"]">@TempData["ResetLink"]</a>
                        </div>
                    }

                    <form asp-action="ForgotPassword" method="post">
                        @Html.AntiForgeryToken()
                        <div asp-validation-summary="All" class="text-danger small mb-2"></div>
                        <div class="mb-3">
                            <label class="form-label">E-posta</label>
                            <input class="form-control" name="email" type="email" placeholder="ornek@mail.com" />
                        </div>
                        <button class="btn btn-accent w-100" type="submit">
                            <i class="bi bi-envelope me-2"></i>Link Gonder
                        </button>
                    </form>

                    <div class="text-center small text-secondary mt-3">
                        <a asp-controller="Auth" asp-action="Login" class="text-decoration-none">Giris ekranina don</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
