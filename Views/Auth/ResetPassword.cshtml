@{
    ViewData["Title"] = "Sifre Yenileme";
    var email = ViewBag.Email as string ?? "";
    var token = ViewBag.Token as string ?? "";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-5">
            <div class="card border-0 shadow-sm rounded-4">
                <div class="card-body p-4 p-md-5">
                    <h4 class="fw-bold mb-2">Yeni Sifre Belirle</h4>
                    <div class="text-secondary small mb-3">Guclu bir sifre belirleyin ve devam edin.</div>

                    <form asp-action="ResetPassword" method="post">
                        @Html.AntiForgeryToken()
                        <div asp-validation-summary="All" class="text-danger small mb-2"></div>
                        <input type="hidden" name="email" value="@email" />
                        <input type="hidden" name="token" value="@token" />

                        <div class="mb-2">
                            <label class="form-label">Yeni Sifre</label>
                            <input class="form-control" name="password" type="password"
                                   minlength="8"
                                   pattern="(?=.*[a-z])(?=.*[A-Z])(?=.*[0-9]).{8,}"
                                   title="En az 8 karakter, bir buyuk harf, bir kucuk harf ve bir rakam icermeli."
                                   placeholder="********" />
                        </div>
                        <div class="form-text mb-3">
                            En az 8 karakter, bir buyuk harf, bir kucuk harf ve bir rakam icermeli.
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Yeni Sifre (Tekrar)</label>
                            <input class="form-control" name="confirmPassword" type="password" placeholder="********" />
                        </div>

                        <button class="btn btn-accent w-100" type="submit">
                            <i class="bi bi-lock me-2"></i>Sifreyi Guncelle
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
