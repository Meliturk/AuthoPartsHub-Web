@model List<AutoPartsWeb.Models.CartItem>

@{
    ViewData["Title"] = "Sepetim";
}

<div class="container py-4">
    <div class="d-flex align-items-center justify-content-between mb-3">
        <h2 class="fw-bold mb-0">Sepet</h2>
        <a class="btn btn-outline-secondary" asp-controller="Parts" asp-action="Index">Alışverişe Devam Et</a>
    </div>

    @if (Model.Count == 0)
    {
        <div class="alert alert-info rounded-4">
            Sepetiniz boş. Parça eklemek için ürün listesini ziyaret edin.
        </div>
    }
    else
    {
        <div class="card border-0 shadow-sm rounded-4">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table align-middle">
                        <thead>
                            <tr class="text-secondary">
                                <th>Parça</th>
                                <th>Marka</th>
                                <th>Uyumluluk</th>
                                <th class="text-end">Adet</th>
                                <th class="text-end">Fiyat</th>
                                <th class="text-end">Tutar</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="fw-semibold">@item.Name</td>
                                <td>@item.Brand</td>
                                <td>@(string.IsNullOrWhiteSpace(item.VehicleText) ? "" : item.VehicleText)</td>
                                <td class="text-end">
                                    <form asp-controller="Cart" asp-action="Update" method="post" class="d-inline auto-submit-form">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="partId" value="@item.PartId" />
                                        <input type="number" name="quantity" value="@item.Quantity" min="1" max="99" class="form-control form-control-sm d-inline-block" style="width: 72px;" data-autosubmit />
                                        <input type="hidden" name="returnUrl" value="@Context.Request.Path" />
                                    </form>
                                </td>
                                <td class="text-end">@item.Price.ToString("C0")</td>
                                <td class="text-end">@((item.Price * item.Quantity).ToString("C0"))</td>
                                <td class="text-end">
                                    <form asp-controller="Cart" asp-action="Remove" method="post" class="d-inline">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="partId" value="@item.PartId" />
                                        <input type="hidden" name="returnUrl" value="@Context.Request.Path" />
                                        <button type="submit" class="btn btn-sm btn-outline-danger">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                        </tbody>
                    </table>
                </div>

                <div class="d-flex justify-content-end mt-3">
                    <div class="text-end">
                        <div class="text-secondary small">Ara Toplam</div>
                        <div class="fs-4 fw-bold">@((ViewBag.Total ?? 0m).ToString("C0"))</div>
                        <a class="btn btn-accent mt-2" asp-controller="Cart" asp-action="Checkout">Satın Al</a>
                        <div class="small text-secondary mt-1">Ödeme için giriş yapmanız istenecektir.</div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
