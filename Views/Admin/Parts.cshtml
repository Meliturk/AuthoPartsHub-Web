@model List<AutoPartsWeb.Models.Part>

@{
    ViewData["Title"] = "Parçalar";
    Layout = "_AdminLayout";
    var q = (ViewBag.Q ?? "").ToString();
}

<div class="container py-4">
    <div class="d-flex align-items-center justify-content-between mb-3">
        <div>
            <h3 class="fw-bold mb-0"><i class="bi bi-box-seam me-2"></i>Parça Listesi</h3>
            <div class="text-secondary small">Toplam: @Model.Count kayıt</div>
        </div>

        <a class="btn btn-accent" asp-controller="Admin" asp-action="CreatePart">
            <i class="bi bi-plus-circle me-2"></i>Yeni Parça
        </a>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success rounded-4">
            <i class="bi bi-check-circle me-2"></i>@TempData["Success"]
        </div>
    }

    <div class="card border-0 shadow-sm rounded-4 mb-3">
        <div class="card-body">
            <form method="get" asp-controller="Admin" asp-action="Parts" class="row g-2 align-items-center">
                <div class="col-md-10">
                    <div class="input-group">
                        <span class="input-group-text bg-white"><i class="bi bi-search"></i></span>
                        <input class="form-control" name="q" value="@q"
                               placeholder="Parça adı, marka, kategori, araç (Fiat Egea 2020) ara..." />
                    </div>
                </div>
                <div class="col-md-2">
                    <button class="btn btn-dark w-100" type="submit">Ara</button>
                </div>
            </form>
        </div>
    </div>

    <div class="card border-0 shadow-sm rounded-4">
        <div class="card-body p-3">
            <div class="table-responsive">
                <table class="table align-middle mb-0">
                    <thead class="text-secondary small">
                        <tr>
                            <th>Görsel</th>
                            <th>Parça</th>
                            <th>Marka</th>
                            <th>Kategori</th>
                            <th>Uyumlu Araç</th>
                            <th class="text-end">Fiyat</th>
                            <th class="text-end">Stok</th>
                            <th class="text-end">İşlem</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var p in Model)
                        {
                            <tr>
                                <td style="width:80px;">
                                    @if (!string.IsNullOrWhiteSpace(p.ImageUrl))
                                    {
                                        <img src="@p.ImageUrl" alt="@p.Name" class="img-fluid rounded" style="max-height:64px; object-fit:cover;" />
                                    }
                                    else
                                    {
                                        <div class="bg-light border rounded d-flex align-items-center justify-content-center" style="height:64px;">
                                            <i class="bi bi-image text-secondary"></i>
                                        </div>
                                    }
                                </td>
                                <td class="fw-semibold">@p.Name</td>
                                <td>@p.Brand</td>
                                <td>@p.Category</td>
                                <td>@(p.Vehicle == null ? "-" : $"{p.Vehicle.Brand} {p.Vehicle.Model} ({p.Vehicle.Year})")</td>
                                <td class="text-end">@p.Price.ToString("C0")</td>
                                <td class="text-end">@p.Stock</td>
                                <td class="text-end">
                                    <div class="d-inline-flex align-items-center justify-content-end w-100">
                                        <a class="btn btn-sm btn-outline-secondary me-3"
                                           asp-controller="Admin" asp-action="EditPart" asp-route-id="@p.Id">
                                            Düzenle
                                        </a>
                                        <div class="d-inline-flex align-items-center">
                                            <form asp-controller="Admin" asp-action="AdjustPartStock" method="post" class="me-1">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="id" value="@p.Id" />
                                                <input type="hidden" name="delta" value="-1" />
                                                <input type="hidden" name="q" value="@q" />
                                                <button type="submit" class="btn btn-sm btn-outline-danger" title="Stok azalt (-1)">-</button>
                                            </form>
                                            <form asp-controller="Admin" asp-action="AdjustPartStock" method="post">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="id" value="@p.Id" />
                                                <input type="hidden" name="delta" value="1" />
                                                <input type="hidden" name="q" value="@q" />
                                                <button type="submit" class="btn btn-sm btn-outline-success" title="Stok artır (+1)">+</button>
                                            </form>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

                @if (Model.Count == 0)
                {
                    <div class="text-center text-secondary py-4">
                        Sonuç bulunamadı.
                    </div>
                }
            </div>
        </div>
    </div>
</div>
