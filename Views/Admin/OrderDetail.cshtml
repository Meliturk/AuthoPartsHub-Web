@model AutoPartsWeb.Models.Order

@{
    ViewData["Title"] = "Sipariş Detayı";
    Layout = "_AdminLayout";
    var statuses = new Dictionary<string, string>
    {
        { "Pending", "Beklemede" },
        { "Processing", "Hazırlanıyor" },
        { "Shipped", "Kargolandı" },
        { "Cancelled", "İptal" },
        { "Completed", "Tamamlandı" }
    };
}

<div class="d-flex align-items-center justify-content-between mb-3">
    <div>
        <h3 class="fw-bold mb-0"><i class="bi bi-receipt me-2"></i>Sipariş #@Model.Id</h3>
        <div class="text-secondary small">Tarih: @Model.CreatedAt.ToLocalTime().ToString("g")</div>
    </div>
    <a class="btn btn-outline-secondary" asp-action="Orders">Geri</a>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success rounded-4">@TempData["Success"]</div>
}
@if (TempData["Warning"] != null)
{
    <div class="alert alert-warning rounded-4">@TempData["Warning"]</div>
}

<div class="row g-3">
    <div class="col-lg-8">
        <div class="card border-0 shadow-sm rounded-4">
            <div class="card-body">
                <h5 class="fw-bold mb-3">Ürünler</h5>
                <div class="table-responsive">
                    <table class="table align-middle">
                        <thead class="text-secondary small">
                            <tr>
                                <th>Parça</th>
                                <th>Adet</th>
                                <th class="text-end">Birim</th>
                                <th class="text-end">Tutar</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Items)
                            {
                                <tr>
                                    <td>@item.Part?.Name</td>
                                    <td>@item.Quantity</td>
                                    <td class="text-end">@item.UnitPrice.ToString("C0")</td>
                                    <td class="text-end">@((item.UnitPrice * item.Quantity).ToString("C0"))</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-4">
        <div class="card border-0 shadow-sm rounded-4 mb-3">
            <div class="card-body">
                <h5 class="fw-bold mb-3">Müşteri</h5>
                <div class="small">
                    <div><strong>Ad:</strong> @Model.CustomerName</div>
                    <div><strong>Email:</strong> @Model.Email</div>
                    <div><strong>Adres:</strong> @Model.Address</div>
                    @if (!string.IsNullOrWhiteSpace(Model.City)) { <div><strong>Şehir:</strong> @Model.City</div> }
                    @if (!string.IsNullOrWhiteSpace(Model.Phone)) { <div><strong>Telefon:</strong> @Model.Phone</div> }
                </div>
            </div>
        </div>

        <div class="card border-0 shadow-sm rounded-4">
            <div class="card-body">
                <h5 class="fw-bold mb-3">Durum</h5>
                <form asp-action="UpdateOrderStatus" method="post" class="d-flex gap-2 align-items-center">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="id" value="@Model.Id" />
                    <select class="form-select" name="status">
                        @foreach (var s in statuses)
                        {
                            <option value="@s.Key" selected="@(Model.Status == s.Key ? "selected" : null)">@s.Value</option>
                        }
                    </select>
                    <button class="btn btn-accent" type="submit">Güncelle</button>
                </form>
                <div class="d-flex justify-content-between align-items-center mt-3">
                    <div class="small text-secondary">Toplam</div>
                    <div class="fw-bold">@Model.Total.ToString("C0")</div>
                </div>
            </div>
        </div>
    </div>
</div>
